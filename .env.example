# Application Settings
APP_NAME=Record Linkage App

# Security - REQUIRED (generate strong random keys!)
# Generate a strong key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-MUST-CHANGE-IN-PRODUCTION-min-32-chars

# Debug mode (MUST be false in production)
DEBUG=false

# Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./storage/app.db

# Storage
UPLOAD_DIR=storage/uploads
MODELS_DIR=storage/models
MAX_UPLOAD_SIZE_MB=100
